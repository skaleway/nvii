{
  "name": "nvii",
  "description": "Secure environment variable management platform",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "postinstall": "turbo run build --filter=./packages/env-helpers --filter=./packages/database",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publish-packages": "changeset version && changeset publish",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "eslint": "^8.57.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-turbo": "^2.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.2.5",
    "turbo": "^2.3.0",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.9.1",
    "@nvii/env-helpers": "workspace:*",
    "@nvii/typescript-config": "workspace:*",
    "@prisma/client": "^6.9.0",
    "changeset": "^0.2.6",
    "next-auth": "^4.24.11"
  },
  "volta": {
    "node": "20.19.6"
  }
}
